pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'PythonwithJson.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
            }
        }
        stage('post') {
            steps {
                echo 'Status of build'
                 emailext body: "${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \n ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
                 recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                 subject: "Jenkins Build Pipeline Status" ,
                 to: 'kumar.dk3671@gmail.com'   
               }
            }
        }
    }   
         
      
