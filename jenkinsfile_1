  pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'PythonwithJson.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
            }
        stage('post'){
            steps{
                post {
                    sucess {
                        mail to: 'kumar.dk3671@gmail.com',
                        subject: 'Sucess Pipeline',
                        body: "Pipeline is sucessfull"
                    }
                }
            }    
        }
    }
}   
   
