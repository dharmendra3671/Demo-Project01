    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'PythonwithJson.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
            }
        }
        
    }
    post {
        sucess {
