import json
import time
import zipfile
import os
with open('person.json','r') as persondata:
    emp=json.load(persondata)
    print(type(emp))
print(emp['path'])
    
list_of_files = filter( lambda x: os.path.isfile(os.path.join(emp['path'], x)),
                        os.listdir(emp['path']))

list_of_files = sorted( list_of_files,
                        key = lambda x: os.path.getmtime(os.path.join(emp['path'], x)))
fileno=emp['files']
for file in list_of_files[0:-fileno]:
    os.remove(os.path.join(emp['path'],file))
list_of_files.reverse()

print("The Update Files are:")
for file_name in list_of_files[:emp['files']]:
    file_path = os.path.join(emp['path'], file_name)
    timestamp_str = time.strftime('%d/%m/%Y :: %H:%M:%S',
                                time.gmtime(os.path.getmtime(file_path)))
    print(timestamp_str, ' -->', file_name)

path=emp['path']
def prepare_zip(path):
    new_file = emp['path']+ 'Python.zip'
    
    zip = zipfile.ZipFile(new_file, 'w', zipfile.ZIP_DEFLATED)
    
    for dir_file, dir_names, files in os.walk(emp['path']):
        f_path = dir_file.replace(dir_file, '')
        f_path = f_path and f_path + os.sep
        
        for file in files:
            zip.write(os.path.join(emp['path'], file), f_path + file)
    zip.close()
    print("Files Zipped successfully..")
    return new_file


prepare_zip(emp['path'])
